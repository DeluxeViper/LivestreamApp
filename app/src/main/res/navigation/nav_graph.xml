<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapsFragment">

    <fragment
        android:id="@+id/liveBroadcastFragment"
        android:name="com.deluxe_viper.livestreamapp.presentation.main.stream_broadcast.LiveBroadcastFragment"
        android:label="fragment_live_broadcast"
        tools:layout="@layout/fragment_live_broadcast" >
        <action
            android:id="@+id/action_liveBroadcastFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.deluxe_viper.livestreamapp.presentation.main.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_liveBroadcastFragment"
            app:destination="@id/liveBroadcastFragment" />
        <action
            android:id="@+id/action_mapsFragment_to_streamPlayerFragment"
            app:destination="@id/streamPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/streamPlayerFragment"
        android:name="com.deluxe_viper.livestreamapp.presentation.main.stream_play.StreamPlayerFragment"
        android:label="fragment_stream_player"
        tools:layout="@layout/fragment_stream_player" >
        <action
            android:id="@+id/action_streamPlayerFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
</navigation>